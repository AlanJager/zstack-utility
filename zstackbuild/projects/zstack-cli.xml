<?xml version="1.0" encoding="UTF-8"?>

<project name="zstack-cli builder" basedir="../">
    <property name="zstackcli.bdir" location="${build.dir}/zstackcli" />
    <property name="zstackcli.virtualenv.file" location="${virtualenv.dir}/zstackcli-virtualenv.tar.bz" />
    <property name="zstackcli.virtualenv.dir" location="${virtualenv.dir}/zstackcli" />

    <target name="build-cli" >
        <makeDir dir="${zstackcli.bdir}" />

        <checkProperty property="zstackcli.source" />
        <checkFile file="${zstackcli.source}" />
        <checkFile file="${zstackcli.source}/setup.py" />

        <delete dir="${zstackcli.source}/dist" />

        <exec executable="python" dir="${zstackcli.source}" failonerror="true">
            <arg value="setup.py" />
            <arg value="sdist" />
        </exec>

        <copy todir="${zstackcli.bdir}/">
            <fileset dir="${zstackcli.source}/">
                <exclude name="**/*~" />
                <include name="dist/*.tar.gz" />
            </fileset>
        </copy>
    </target>

    <target name="assemble-cli">
        <copy todir="${tools.dir}">
            <fileset dir="${zstackcli.bdir}/dist">
                <include name="**/*" />
            </fileset>
        </copy>

        <makeDir2 dir="${zstackcli.virtualenv.dir}" />
        <exec executable="bash" failonerror="true">
            <arg value="${create.virtualenv}" />
            <arg value="${zstackcli.virtualenv.dir}" />
            <arg value="--system-site-packages" />
        </exec>

        <exec executable="bash" failonerror="true">
            <arg value="${install.lib.to.virtualenv}" />
            <arg value="${zstackcli.virtualenv.dir}" />
            <arg value="${zstacklib.ansible.dir}/zstacklib*.tar.gz" />
        </exec>

        <exec executable="bash" failonerror="true">
            <arg value="${install.lib.to.virtualenv}" />
            <arg value="${zstackcli.virtualenv.dir}" />
            <arg value="${tools.dir}/zstackcli*.tar.gz" />
        </exec>

        <exec executable="bash" failonerror="true">
            <arg value="${update.virtualenv}" />
            <arg value="${zstackcli.virtualenv.dir}" />
        </exec>

        <exec executable="tar" dir="${virtualenv.dir}" failonerror="true">
            <arg value="jcf" />
            <arg value="${zstackcli.virtualenv.file}" />
            <arg value="zstackcli" />
        </exec>

        <copy file="${zstackcli.virtualenv.file}" todir="${tools.dir}" />
        <copy file="${zstackcli.binfile}" todir="${tools.dir}" />
    </target>
</project>
