<?xml version="1.0" encoding="UTF-8"?>

<project name="build python sdk" basedir="../">
    <target name="build-python-sdk">
        <echo message="build python sdk"/>

        <checkProperty property="zstack.source" />
        <checkFile file="${zstack.source}" />

        <exec executable="bash" dir="${zstack.source}" failonerror="true">
            <arg value="${build.python.sdk}" />
            <arg value="${zstack.source}" />
        </exec>

        <echo message="successfully build python sdk."/>
    </target>
</project>
