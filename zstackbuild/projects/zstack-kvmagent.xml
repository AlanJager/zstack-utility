<?xml version="1.0" encoding="UTF-8"?>

<project name="zstack-kvmagent builder" basedir="../">
    <property name="kvmagent.bdir" location="${build.dir}/kvmagent" />
    <property name="kvmagent.salt.dir" location="${salt.dir}/kvm/" />
    <property name="kvmagent.ansible.dir" location="${ansible.dir}/kvm/" />
    <property name="kvmagent.virtualenv.file" location="${virtualenv.dir}/kvm-virtualenv.tar.bz" />
    <property name="kvmagent.virtualenv.dir" location="${virtualenv.dir}/kvm" />

    <target name="build-kvmagent" >
        <makeDir dir="${kvmagent.bdir}" />

        <checkProperty property="kvmagent.source" />
        <checkProperty property="kvmagent.serviceFile" />
        <checkFile file="${kvmagent.source}" />
        <checkFile file="${kvmagent.source}/setup.py" />
        <checkFile file="${kvmagent.serviceFile}" />

        <delete dir="${kvmagent.source}/dist" />

        <exec executable="python" dir="${kvmagent.source}" failonerror="true">
            <arg value="setup.py" />
            <arg value="sdist" />
        </exec>

        <!--
        <copy todir="${kvmagent.bdir}">
            <fileset file="${kvmagent.source}/dist/*.egg" />
            <regexpmapper from="(.*).egg" to="zstack-kvmagent.egg"/>
        </copy>
        -->

        <copy todir="${kvmagent.bdir}/">
            <fileset dir="${kvmagent.source}/">
                <exclude name="**/*~" />
                <include name="dist/*.tar.gz" />
                <include name="salt/**/*" />
                <include name="ansible/**/*" />
            </fileset>
        </copy>
    </target>

    <target name="assemble-kvmagent">
        <makeDir dir="${kvmagent.ansible.dir}" />

        <copy todir="${kvmagent.ansible.dir}">
            <fileset dir="${kvmagent.bdir}/ansible">
                <include name="**/*" />
            </fileset>
            <fileset dir="${kvmagent.bdir}/dist">
                <include name="**/*" />
            </fileset>
        </copy>

        <makeDir2 dir="${kvmagent.virtualenv.dir}" />
        <exec executable="bash" failonerror="true">
            <arg value="${create.virtualenv}" />
            <arg value="${kvmagent.virtualenv.dir}" />
            <arg value="--system-site-packages" />
        </exec>

        <exec executable="bash" failonerror="true">
            <arg value="${install.lib.to.virtualenv}" />
            <arg value="${kvmagent.virtualenv.dir}" />
            <arg value="${zstacklib.ansible.dir}/zstacklib*.tar.gz" />
        </exec>

        <exec executable="bash" failonerror="true">
            <arg value="${install.lib.to.virtualenv}" />
            <arg value="${kvmagent.virtualenv.dir}" />
            <arg value="${kvmagent.ansible.dir}/kvmagent*.tar.gz" />
        </exec>

        <exec executable="bash" failonerror="true">
            <arg value="${update.virtualenv}" />
            <arg value="${kvmagent.virtualenv.dir}" />
        </exec>

        <exec executable="tar" dir="${virtualenv.dir}" failonerror="true">
            <arg value="jcf" />
            <arg value="${kvmagent.virtualenv.file}" />
            <arg value="kvm" />
        </exec>

        <copy file="${kvmagent.virtualenv.file}" todir="${kvmagent.ansible.dir}" />
        <copy file="${kvmagent.serviceFile}" todir="${kvmagent.ansible.dir}" />
    </target>
</project>
